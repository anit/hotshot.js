@model HotshotJsSample.Domain.Entities.Person
@{
    ViewBag.Title = "Summary";
}

<h2>Summary of @Model.Name</h2>

<table border="1">
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Html.TextBoxFor(model => model.Address)</td>
        </tr>
    </tbody>
</table>


Items added are 

<table border="1">
    <tbody>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
        </tr>
        @foreach(var item in Model.ItemsPurchased)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
        </tr>
            }
    </tbody>
</table>


<a href="@Url.Action("Index", "Person")">Back to dashboard</a>>